@using Orchard.ContentManagement
@using Orchard.Core.Common.Fields
@{ 
    ContentItem contentItem = Model.ContentPart.ContentItem;
    var field = ((ContentItem) Model.ContentItem).Parts.Select(x => x).SelectMany(x => x.Fields).First(x => string.Equals(x.Name, "PreviewText", StringComparison.OrdinalIgnoreCase));
    string bodyHtml = ((TextField)field).Value;    
    var body = new HtmlString(bodyHtml);
}

@body

<ul class="actions">
    <li>@Html.ItemDisplayLink(T("more").ToString(), contentItem, new Dictionary<string, object> { { "class", "button button-icon fa fa-file" } })    
</ul>