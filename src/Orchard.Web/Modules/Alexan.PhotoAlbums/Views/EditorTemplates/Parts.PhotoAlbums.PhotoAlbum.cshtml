@model Alexan.PhotoAlbums.Models.PhotoAlbumPart

<fieldset>
     <!--Description -->
     <div class="editor-label">
        @Html.LabelFor(model => model.Description, T("Description"))
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Description, 5, 60, null)
        @Html.ValidationMessageFor(model => model.Description)
    </div> 
     <!--MaxWidth -->
    <div class="editor-label">
        @Html.LabelFor(model => model.MaxWidth, T("Max Width"))
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.MaxWidth, new { type = "number" })
        @Html.ValidationMessageFor(model => model.MaxWidth)
    </div>
     <!--MaxHeight -->
    <div class="editor-label">
        @Html.LabelFor(model => model.MaxHeight, T("Max Height"))
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.MaxHeight, new { type = "number" })
        @Html.ValidationMessageFor(model => model.MaxHeight)
    </div>
     <!--Resize -->
    <div>        
        @Html.CheckBoxFor(m => m.Resize, new {@class="check-box" })   
        <label for="Resize" class="forcheckbox">@T("Resize")</label>     
    </div>      
     <!--Description -->
    <div class="editor-label">
        @Html.LabelFor(model => model.ThumbWidth, T("Thumb Width"))
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.ThumbWidth, new { type = "number" })
        @Html.ValidationMessageFor(model => model.ThumbWidth)
    </div>
     <!--Description -->
    <div class="editor-label">
        @Html.LabelFor(model => model.ThumbHeight, T("Thumb Height"))
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.ThumbHeight, new { type = "number" })
        @Html.ValidationMessageFor(model => model.ThumbHeight)
    </div> 
    <!--AnimationSpeed -->
    <div class="editor-label">
        @Html.LabelFor(model => model.AnimationSpeed, T("Animation Speed"))
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.AnimationSpeed, new { type = "number" }) &nbsp; @T("milliseconds")
        @Html.ValidationMessageFor(model => model.AnimationSpeed)
    </div>
</fieldset>